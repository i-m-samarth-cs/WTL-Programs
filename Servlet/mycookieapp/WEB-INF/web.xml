<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
    id="WebApp_ID" version="4.0">

  <display-name>MyCookieApp</display-name>

  <servlet>
    <servlet-name>MyCookieSetter</servlet-name>
    <servlet-class>mycookieservlet</servlet-class> </servlet>

  <servlet-mapping>
    <servlet-name>MyCookieSetter</servlet-name>
    <url-pattern>/set_cookie</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>MyCookieGetter</servlet-name>
    <servlet-class>getCookieServlet</servlet-class> </servlet>

  <servlet-mapping>
    <servlet-name>MyCookieGetter</servlet-name>
    <url-pattern>/get_cookie</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

</web-app>