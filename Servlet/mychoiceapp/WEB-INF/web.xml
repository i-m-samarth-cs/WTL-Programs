<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
    id="WebApp_ID" version="4.0">

  <display-name>MyChoicesApp</display-name>

  <servlet>
    <servlet-name>MyChoiceServlet</servlet-name>
    <!-- IMPORTANT: This must be the full package.class name -->
    <servlet-class>my_choiceservlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>MyChoiceServlet</servlet-name>
    <!-- This is the exact path the form action points to -->
    <url-pattern>/choose_language</url-pattern>
  </servlet-mapping>

  <!-- Optional: Define a welcome file to directly access test.html -->
  <welcome-file-list>
    <welcome-file>test.html</welcome-file>
  </welcome-file-list>

</web-app>